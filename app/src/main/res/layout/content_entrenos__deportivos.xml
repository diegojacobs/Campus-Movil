<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/entrenos__deportivos"
    tools:context="com.example.usuario.uvgmovil.Entrenos_Deportivos">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="100"
        android:background="#ff42393a">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="310dp"
            android:layout_weight="30"
            android:id="@+id/imageView1"
            android:src="@drawable/sele_fut_img" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_weight="20"
            android:id="@+id/imageView2"
            android:src="@drawable/sele_balo_img" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="510dp"
            android:layout_weight="50"
            android:id="@+id/imageView3"
            android:src="@drawable/sele_voli_img" />
    </LinearLayout>

</RelativeLayout>
